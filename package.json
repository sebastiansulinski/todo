{
    "private": true,
    "scripts": {
        "dev": "vite",
        "build": "vite build"
    },
    "devDependencies": {
        "autoprefixer": "^10.4.12",
        "laravel-vite-plugin": "^0.6.0",
        "postcss": "^8.4.18",
        "tailwindcss": "^3.1.8",
        "vite": "^3.0.0"
    },
    "eslintConfig": {
        "root": true,
        "env": {
            "node": true
        },
        "extends": [
            "plugin:vue/essential",
            "eslint:recommended",
            "@vue/prettier"
        ],
        "rules": {
            "no-console": "off",
            "no-debugger": "off",
            "no-prototype-builtins": "off"
        }
    },
    "prettier": {
        "trailingComma": "es5",
        "tabWidth": 2,
        "semi": true,
        "singleQuote": true
    },
    "postcss": {
        "plugins": {
            "tailwindcss": "tailwind.config.js",
            "autoprefixer": {}
        }
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not dead"
    ]
}
